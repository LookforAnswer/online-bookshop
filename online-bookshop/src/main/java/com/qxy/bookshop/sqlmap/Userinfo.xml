         <insert id="insertUserInfo"  parameterType="userInfo" >
             insert into userinfo(  
         id,
         username,
         password) 
         values 
         (#{id},      
         #{username},
         #{password})
         </insert>
         
         <select id="queryByEntity" parameterType="userInfo"  resultType="userInfo">
         	select * from userinfo where 1=1 
         	
         </select>
         
          <select id="queryByUsername" parameterType="userInfo"  resultType="userInfo">
         	select * from userinfo where 1=1 and username=#{username};
         </select>
         
